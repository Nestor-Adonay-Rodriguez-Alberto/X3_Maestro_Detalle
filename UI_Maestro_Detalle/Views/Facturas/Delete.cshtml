@model Entidades.Factura

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1><br />

<div>
    <h5>Datos De La Factura</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("FECHA:") 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("N° FACTURA:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correlativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("EMPLEADO")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Objeto_Empleado.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("CLIENTE")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("TOTAL:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <!-- VISTA DETALLE-->
    <h5>Detalles De Los Productos</h5>
    <div class="row row-cols-md-12">
        @await Html.PartialAsync("_Detalle", Model.Lista_DetalleFactura)
    </div>
  
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFactura" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
    </form>
</div>
